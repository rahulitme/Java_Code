public class TwoByTwoMatrix {
    public static void main(String[] args) {
    int matrix[][]=[2][3];

    matrix[0][0]=1;
    matrix[0][1]=1;
     matrix[1][0]=1;
     matrix[1][1]=1;

    printmatrix(matrix)

    }

    static void printmatrix(int matrix[][])
    {
    for(int i=0;i<matrix.length;i++)
    {
    for(int j=0;i<matrix[0].length;i++)
    {
    System.out.println(matrix[i][j]+" ")
    }
    System.out.println()
}
    }
}
// Online Java Compiler
// Use this editor to write, compile and run your Java code online

class Main {
    public static void main(String[] args) {
        String s = "rahulKuMaR"; // Input string
        int uppercase = 0;       // Counter for uppercase letters
        int lowercase = 0;       // Counter for lowercase letters
        
        // Loop through the string
        for (int i = 0; i < s.length(); i++) {
            char ch = s.charAt(i); // Get the character at the current index
            
            if (Character.isUpperCase(ch)) {   // Check if the character is uppercase
                uppercase++;
            } else if (Character.isLowerCase(ch)) { // Check if the character is lowercase
                lowercase++;
            }
        }
        
        // Print the counts after the loop
        System.out.println("Uppercase Count: " + uppercase);
        System.out.println("Lowercase Count: " + lowercase);
    }
}
